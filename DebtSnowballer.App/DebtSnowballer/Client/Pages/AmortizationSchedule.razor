@page "/amortizationschedule"
@using DebtSnowballer.Client.ClientSideServices.AmortizationScheduleService

@inject IAmortizationScheduleService AmortizationScheduleService

<h1>Amortization Schedule</h1>

@foreach (var plan in PaymentPlanDetails.PaymentPlans)
{
	<h3>@plan.Key</h3>
	<table class="table">
		<thead>
		<tr>
			<th>Month</th>
			<th>Starting Balance</th>
			<th>Interest Paid</th>
			<th>Principal Paid</th>
			<th>Ending Balance</th>
			<!-- Add other relevant columns -->
		</tr>
		</thead>
		<tbody>
		@foreach (var detail in plan.Value)
		{
			<tr>
				<td>@detail.NickName</td>
				<td>@detail.MonthlyDetails..p.</td>
				<td>@detail.InterestPaid</td>
				<td>@detail.PrincipalPaid</td>
				<td>@detail.EndingBalance</td>
				<!-- Add other relevant columns -->
			</tr>
		}
		</tbody>
	</table>
}

@code {
	private PaymentPlanDetail PaymentPlanDetails { get; set; }

	// Add the necessary parameters for the calculation

	protected override async Task OnInitializedAsync()
	{
		PaymentPlanDetails = await AmortizationScheduleService.CalculatePaymentPlansAsync(/* pass the necessary parameters here */);
	}
}