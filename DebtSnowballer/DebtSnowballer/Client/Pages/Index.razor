@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<AuthorizeView>
	<Authorized>
		<h1>Welcome to Debt Free Planner!</h1>

		<p>Start planning your journey to financial freedom today. Add your loans, choose a payoff strategy, and track your progress towards being debt free.</p>

		<button class="btn btn-primary" @onclick="GoToLoans">Get Started</button>
	</Authorized>
	<NotAuthorized>
		<h1>Welcome to Debt Free Planner!</h1>

		<p>Please log in to start planning your journey to financial freedom.</p>

		<button class="btn btn-primary" @onclick="GoToLogin">Log In</button>
	</NotAuthorized>
</AuthorizeView>

@code {
	private void GoToLoans()
	{
		NavigationManager.NavigateTo("/loans");
	}

	private void GoToLogin()
	{
		NavigationManager.NavigateTo("/login");
	}
}